<?xml version="1.0" encoding="utf-8"?>
<!--
Modificaciones en la vista de apuntes contables
-->
<openerp>
    <data>

        <!--
        Menú y acción de asientos codificados por apuntes actuales
        -->

        <record id="view_account_move_filter_add_cur_year" model="ir.ui.view">
            <field name="name">account.move.select.add_cur_year</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <filter string="To Review" position="after">
                    <filter icon="terp-go-month" string="Current year" domain="[('date','>=',time.strftime('%%Y-01-01')]"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
