<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--
        Menú y acción de ordenes de venta 'actuales' (del año actual)
        -->

        <record id="view_sales_order_filter_add_cur_year" model="ir.ui.view">
            <field name="name">sale.order.list.select.add_cur_year</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <filter string="To Invoice" position="after">
                    <filter icon="terp-go-month" string="Current year" domain="[('date_order','>=',time.strftime('%%Y-01-01')]"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
